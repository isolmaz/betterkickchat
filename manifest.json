{
  "manifest_version": 3,
  "name": "Better Kick Chat",
  "version": "1.0.0",
  "description": "Better kick chat for power users",
  "key": "",
  "permissions": [
    "identity",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://kick.com/*",
    "https://isolmaz.github.io/*"
  ],
  "background": {
    "service_worker": "background/service-worker.ts",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/index.html"
  },
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["content/index.ts"]
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "assets/*",
      "styles.css"
    ],
    "matches": ["*://*.kick.com/*"]
  }],
  "oauth2": {
    "client_id": "01JMMTMR9N6Q1R9FBP8P20MZDZ",
    "scopes": [
      "read_user",
      "read_channel",
      "chat_write",
      "chat_read"
    ]
  }
} 