{
  "manifest_version": 3,
  "name": "Kick Chat Enhancer",
  "version": "1.0.0",
  "description": "Enhance your Kick.com chat experience with additional features and improvements",
  "permissions": [
    "storage",
    "alarms"
  ],
  "host_permissions": [
    "https://*.kick.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.kick.com/*"],
      "js": ["src/content/index.ts"],
      "css": ["src/content/styles.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": ["assets/*"],
    "matches": ["https://*.kick.com/*"]
  }]
} 